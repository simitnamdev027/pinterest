<% include ./partials/header.ejs%>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
    <h1>Create a new Post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2" type="file" name="postimage">
        <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2 text-zinc-800 " type="text" placeholder="Title" name="title">
        <textarea class="block w-1/3 h-40 py-2 border-2 rounded-md mt-2 text-zinc-800 " type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2 rounded-md mt-2 bg-red-700" type="Submit" value="Create Post">
    </form>

</div>
